---
import data from "../data/hero.json";
const badges = data?.badges ?? { active: [], pending: [] };
---
<div class="banner" style="margin-top:10px">Badges (Agent Feed)</div>
<div class="panel feed">
  <div class="col">
    <div class="feed-title">Active</div>
    <ul class="feed-list">
      {badges.active?.length ? badges.active.map((b) => <li>{b}</li>) : <li class="empty">— none —</li>}
    </ul>
  </div>
  <div class="col">
    <div class="feed-title">Pending</div>
    <ul class="feed-list">
      {badges.pending?.length ? badges.pending.map((b) => <li>{b}</li>) : <li class="empty">— none —</li>}
    </ul>
  </div>
</div>

<style>
  .feed{ display:grid; grid-template-columns:1fr 1fr; gap:14px; }
  .feed .feed-title{
    font-family:'Press Start 2P'; font-size:12px; color:#e9f7ff;
    margin:0 0 8px; border-bottom:2px solid rgba(56,199,231,.25); padding-bottom:6px;
    text-shadow:0 2px 0 #000, 0 0 10px rgba(0,0,0,.35);
  }
  .feed-list{ margin:0; padding:0; list-style:none; }
  .feed-list li{
    margin:0 0 6px; padding:8px 10px; font-size:14px; line-height:1.35; color:#d3e7f3;
    background:rgba(28,59,84,.14); border:2px solid rgba(56,199,231,.28);
    box-shadow:inset 0 0 0 3px rgba(0,0,0,.55);
  }
  .feed-list li.empty{ opacity:.7; font-style:italic; text-align:center; }
  @media (max-width:720px){ .feed{ grid-template-columns:1fr; } }
</style>